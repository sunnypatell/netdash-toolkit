rules_version = '2';

// NetDash Toolkit Firestore Security Rules
// Deploy via Firebase Console: Firestore > Rules > Publish
// Or via CLI: firebase deploy --only firestore:rules

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can only read/write their own profile
    // This stores email, displayName, lastSeen for easier management in Console
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Projects subcollection - user-scoped access
      match /projects/{projectId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Block all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
