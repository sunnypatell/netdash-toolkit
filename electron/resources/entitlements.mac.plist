<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to run without being notarized (for development) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow JIT compilation (required for Electron) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow dynamic library validation to be disabled -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Network access for ping, traceroute, port scanning -->
    <key>com.apple.security.network.client</key>
    <true/>

    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allow raw network access for ICMP ping -->
    <key>com.apple.security.device.raw-sockets</key>
    <true/>
</dict>
</plist>
